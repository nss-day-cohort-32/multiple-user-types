@model MultipleUserTypesApp.Models.ApplicationUser

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div>
                <label asp-for="FullName" class="control-label"></label>
                <input readonly asp-for="FullName" class="form-control" />
            </div>
            <div>
                <label asp-for="Email" class="control-label">Email</label>
                <input readonly asp-for="Email" class="form-control" />
            </div>
            <div>
                <label asp-for="UserTypeId" class="control-label">Type of User:</label>
                <select asp-for="UserTypeId" class="form-control" asp-items="ViewBag.UserType"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
